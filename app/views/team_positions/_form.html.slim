= form_with model: team_position, class: 'hidden', html: { id: "edit-teamposition-#{team_position.id}", data: { remote: true } } do |f|
  = render 'shared/errors', resource: team_position

  .row
    .col-5
      = f.label :name, 'Должность', class: "hidden"
      = f.text_field :name, class: 'form-control'

    .col-7
      = f.submit 'Сохранить', class: 'btn btn-sm btn-success mr-2'
      = link_to 'Отменить', team_positions_path, class: 'btn btn-sm btn-success'
  